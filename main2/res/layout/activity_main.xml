<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:padding="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sayı Oyunu"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"
                android:id="@+id/sayiOyunu"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hafıza Oyunu"
                android:id="@+id/hafizaOyunu"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zar Atma"
                android:id="@+id/zarAtma"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taş Kağıt Makas"
                android:id="@+id/tasKagitMakas"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mayın Tarlası"
                android:id="@+id/mayinTarlasi"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tık Sayıcı"
                android:id="@+id/tikSayici"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farklı Olanı Bul"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gölge Oyunu"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uçan Kuş"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zıp Zıp"
                android:background="#000"
                android:textColor="#05f"
                android:layout_margin="5dp"/>
    </LinearLayout>
</ScrollView>
